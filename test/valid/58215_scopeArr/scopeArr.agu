-- mete a diagonal de um array com o valor n+1
let setDiag2dArray (a,size,n) : Int[] -> Int -> Int -> Int[] =
    let i : Int = 0;
    let j : Int = 7;
    while i < size do ( 
        let j : Int = 1;
        set a[i][i] = n + j; 
        set i = i + 1
    );
    print(j);
    print("\n");
    a

let main : Unit =
    let arr : Int[][] = new Int[] [4 | new Int [4 | 0]];
    let j : Int = 8;
    print(j);
